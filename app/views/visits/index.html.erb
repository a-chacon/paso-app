<% if @url %>
  <div class="max-w-7xl mx-auto h-screen">
    <div class="mt-5 mb-5 p-5 rounded-lg border border-gray-200 w-full text-gray-900">
      <div class="flex">
        <ul class="bg-white rounded-lg text-gray-900">
          <li class="px-6 py-2 border-b border-gray-200 w-full rounded-t-lg">
            <span>Key:</span>
            <%= @url.key %>
          </li>
          <li class="px-6 py-2 border-b border-gray-200 w-full rounded-t-lg" data-controller="clipboard" data-clipboard-success-content="Copied!">
            <span>Url:</span>
            <input type="text" name="" value=" <%= @url.url %>" data-clipboard-target="source" style="all: unset;pointer-events:none;">
            <button type="button" data-action="clipboard#copy" data-clipboard-target="button" class="bg-blue-500 hover:bg-blue-700 text-white py-1 px-4 rounded-full">Copy</button>
          </li>
          <li class="px-6 py-2 border-b border-gray-200 w-full" data-controller="clipboard" data-clipboard-success-content="Copied!">
            <span>Short:</span>
            <input type="text" name="" value="<%= rails_url_shortener_url() + @url.key %>" data-clipboard-target="source" style="all: unset;pointer-events:none;">
            <button type="button" data-action="clipboard#copy" data-clipboard-target="button" class="bg-blue-500 hover:bg-blue-700 text-white py-1 px-4 rounded-full">Copy</button>
          </li>
          <li class="px-6 py-2 border-b border-gray-200 w-full">
            <span>Expire in:</span>
            <%= ((@url.expires_at.utc - Time.now)/60).ceil %>
            minutes</li>
        </ul>
      </div>
    </div>

    <div class="relative overflow-x-auto shadow-md sm:rounded-lg">
      <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
        <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
          <tr>
            <th scope="col" class="text-sm font-medium px-6 py-4">
              #
            </th>
            <th scope="col" class="text-sm font-medium px-6 py-4">
              IP
            </th>
            <th scope="col" class="text-sm font-medium px-6 py-4">
              Browser
            </th>
            <th scope="col" class="text-sm font-medium px-6 py-4">
              OS
            </th>
            <th scope="col" class="text-sm font-medium px-6 py-4">
              Time
            </th>
            <th scope="col" class="px-6 py-3">
              <span class="sr-only">Edit</span>
            </th>
          </tr>
        </thead>
        <tbody>
          <% @visits.each_with_index do |v, i| %>
            <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
              <th scope="row" class="px-6 py-4 font-medium text-gray-900 dark:text-white whitespace-nowrap"><%= i+1 %></th>
              <td class="px-6 py-4">
                <%= v.ip %>
              </td>
              <td class="px-6 py-4">
                <%= v.browser + " " + v.browser_version %>
              </td>
              <td class="px-6 py-4">
                <%= v.platform + " " + v.platform_version %>
              </td>
              <td class="px-6 py-4">
                <%= v.created_at %>
              </td>
              <td class="px-6 py-4 text-right">
                <a href="#" class="font-medium text-blue-600 dark:text-blue-500 hover:underline">Detail</a>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
<% else %>
  <div class="grid place-items-center h-screen">
    <h1 class="text-4xl tracking-tight font-extrabold text-gray-900 sm:text-5xl md:text-6xl">This link don't exist or has expired.</h1>
  </div>
<% end %>

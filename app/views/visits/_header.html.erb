<div class="mt-5 mb-5 p-5 rounded-lg border border-gray-200 w-full text-gray-900">
  <div class="flex">
    <ul class="grow bg-white rounded-lg text-gray-900">
      <li class="px-6 py-2 border-b border-gray-200 rounded-t-lg">
        <span class="font-bold">Key:</span>
        <%= @url.key %>
      </li>
      <li class="px-6 py-2 border-b border-gray-200 rounded-t-lg">
        <span class="font-bold">Url:</span>
        <%= @url.url %>
      </li>
      <li class="px-6 py-2 border-b border-gray-200" data-controller="clipboard" data-clipboard-success-content="Copied!">
        <span class="font-bold">Short:</span>
        <input type="text" name="" value="<%= rails_url_shortener_url() + @url.key %>" data-clipboard-target="source" style="all: unset;pointer-events:none;">
        <button type="button" data-action="clipboard#copy" data-clipboard-target="button">Copy</button>
      </li>
    </ul>
    <ul class="grow bg-white rounded-lg text-gray-900">
      <li class="px-6 py-2 border-b border-gray-200">
        <span class="font-bold">Expire in:</span>
        <%= @url.expires_at.nil? ? 'never' : ((@url.expires_at.utc - Time.now)/3600).round(1).to_s + 'hours' %>
      </li>
      <li class="px-6 py-2 border-b border-gray-200">
        <span class="font-bold">Status Url:</span>
        <%= rails_url_shortener_url() + @url.key + '/visits' %>
      </li>
    </ul>
  </div>
</div>

<%= render 'shared/navbar' %>

<div class="h-[92vh] bg-[url('/layered-steps-haikei.svg')] bg-cover bg-center bg-repeat-x">
  <div class="container mx-auto w-5/6 md:w-2/3  pt-8 sm:pt-10 md:pt-14 lg:pt-18 xl:pt-26">
    <h1 class="text-center text-4xl font-extrabold text-gray-900 sm:text-5xl md:text-6xl">
      <span>Simplify is simple.</span>
    </h1>
    <div class="flex justify-center pt-10">
      <div class="w-full md:w-2/6">
      <%= form_with model: @user do |form| %>
      <p>
        <label for="user_email" class="font-semibold block py-2">
          Email
        </label>
        <%= form.text_field :email, class: "focus:ring-2 focus:ring-blue-600 focus:outline-none appearance-none w-full md:px-10l text-sm text-slate-900 placeholder-slate-400 rounded-md py-2 pl-10 ring-1 ring-slate-200 shadow-sm md:text-lg" %>
      </p>
      <p>
        <label for="user_password" class="font-semibold block py-2">
          Password
        </label>
        <%= form.password_field :password, class: "focus:ring-2 focus:ring-blue-600 focus:outline-none appearance-none w-full md:px-10l text-sm text-slate-900 placeholder-slate-400 rounded-md py-2 pl-10 ring-1 ring-slate-200 shadow-sm md:text-lg" %>
      </p>
      <p>
        <label for="user_password_confirmation" class="font-semibold block py-2">
          Password confirmation
        </label>
        <%= form.password_field :password_confirmation, class: "focus:ring-2 focus:ring-blue-600 focus:outline-none appearance-none w-full md:px-10l text-sm text-slate-900 placeholder-slate-400 rounded-md py-2 pl-10 ring-1 ring-slate-200 shadow-sm md:text-lg" %>
      </p>
      <p>
        <%= form.submit 'Sign In', class: "mt-8 px-6 md:px-8 py-2 border border-transparent text-base font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 md:text-lg" %>
      </p>
      <% end %>
      <turbo-frame id="errors">
        <%= render 'shared/errors' %>
      </turbo-frame>
      </div>
    </div>

  </div>
</div>

<%= render 'shared/footer' %>
